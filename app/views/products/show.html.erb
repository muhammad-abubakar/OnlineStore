

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Unit price:</strong>
  <%= @product.unit_price %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @product.quantity %>
</p>

<table>
  <thead>
    <tr>
      <th>Price | </th> 
      <th>Sold to |</th> 
      <th>Quantity |</th>
    </tr>
  </thead>

  <tbody>
    <% @product.line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.price %> | </td> 
        <td><%= line_item.user.name %> |</td>
        <td><%= line_item.quantity %> |</td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
<br/>


<td><%= link_to_if(can?(:edit, @product), "Sell", new_product_line_item_path(@product)) %></td>

<td><%= link_to_if(can?(:edit, @product), "Edit", edit_product_path(@product)) %></td>


<%= link_to 'Back', products_path %>
